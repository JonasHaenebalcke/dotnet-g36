@model IEnumerable<Sessie>

@{ ViewData["Title"] = "Sessiekalender"; }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <!--Dropdown voor keuze van maand-->
    @*<form asp-controller="Sessie" asp-action="Index" method="post">
            <label for="maandId"></label>
            <select id="maandId" name="maandId" asp-items=@(ViewData["maanden"] as SelectList) class="form-control">
            </select>
        </form>*@

    <form>
        <div class="form-inline">
            <div class="form-group">
                <label for="maandId"></label>
                <select id="maandId" name="maandId" asp-items="@(ViewData["maanden"] as SelectList)" class="form-control">
                    <option value="">-- huidige maand --</option>
                </select>
            </div>
            <button type="submit" class="btn btn-secondary ml-1">Ingeven</button>
        </div>
    </form>

    <h4>Afgelopen sessie</h4>
    <table class="table table-striped">
        <tr>
            <th class="text-center">Verantwoordelijke</th>
            <th class="text-center">Titel</th>
            <th class="text-center">Startdatum</th>
            <th class="text-center">Startuur</th>
            <th class="text-center">Einddatum</th>
            <th class="text-center">Einduur</th>
            <th class="text-center">Open plaatsen</th>
            <th class="text-center">Aanwezige gebruikers</th>
        </tr>
        <!-- loop die door de lijst van sessies gaat -->
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Verantwoordelijke.GebruikersNaam</td>
                <td>@item.Titel</td>
                <td class="text-center">@item.StartDatum</td>
                <td class="text-center">@item.AantalOpenPlaatsen</td>
            </tr>
        }
    </table>

    <h4>Geplande sessie</h4>
    <table class="table table-striped">
        <tr>
            <th class="text-center">Verantwoordelijke</th>
            <th class="text-center">Titel</th>
            <th class="text-center">Startdatum</th>
            <th class="text-center">Open plaatsen</th>
            <th class="text-center">Ingeschreven</th>
        </tr>
        <!-- loop die door de lijst van sessies gaat -->
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Hoofdverantwoordelijke.GebruikersNaam</td>
                <td>@item.Titel</td>
                <td class="text-center">@item.StartDatum</td>
                <td class="text-center">@item.AantalOpenPlaatsen</td>
            </tr>
        }
    </table>
</body>
</html>
