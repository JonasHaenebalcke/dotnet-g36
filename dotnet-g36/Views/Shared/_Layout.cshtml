
@using Microsoft.AspNetCore.Identity
@using dotnet_g36.Models.Domain
@inject SignInManager<Gebruiker> SignInManager
@inject UserManager<Gebruiker> UserManager
@inject IGebruikerRepository  GebruikerRepository

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - dotnet_g36</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        @if ((ViewContext.RouteData.Values["action"] ?? "").ToString().ToLower().Equals("meldaanwezig"))
        {

        }
        else
        {
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Sessie" asp-action="Index">IT-LAB</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <partial name="_LoginPartial" />
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Sessie" asp-action="Index">Sessies</a>
                            </li>
                            <!--Moet nog gecontrolleerd worden of dat ingelogde hoofd- of vernatwoordelijke is en dan mag het ook zichtbaar zijn anders niet.-->
                            <!-- && (UserRepository.GetDeelnemerByUsername(User.IsInRole("Hoofdverantwoordelijke"))
                        (UserManager. IsSignedIn(User.IsInRole("Hoofdverantwoordelijke")) || (SignInManager.IsSignedIn(User.IsInRole("Verantwoordelijke"))))) -->
                            @if (SignInManager.IsSignedIn(User))
                            {@if (User.IsInRole("Hoofdverantwoordelijke").Equals(true) || User.IsInRole("Verantwoordelijke").Equals(true))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-controller="SessieOpenzetten" asp-action="Openzetten">Sessies openzetten</a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        }
        </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - IT-Lab - Groep 36 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
