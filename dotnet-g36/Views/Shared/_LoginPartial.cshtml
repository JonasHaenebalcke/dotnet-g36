@using Microsoft.AspNetCore.Identity
@using dotnet_g36.Models.Domain
@inject SignInManager<Gebruiker> SignInManager
@inject UserManager<Gebruiker> UserManager
@inject IUserRepository UserRepository

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hallo @*@User.Identity.Name*@ 
            @UserRepository.GetDeelnemerByUsername(User.Identity.Name).Voornaam @UserRepository.GetDeelnemerByUsername(User.Identity.Name).Familienaam !</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Sessie", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
